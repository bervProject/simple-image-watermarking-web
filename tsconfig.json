{
  "compilerOptions": {
    "target": "es2015",
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "isolatedModules": true
  },
  "exclude": [
    "test",
    "infra"
  ]
}
